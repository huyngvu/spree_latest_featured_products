<% content_for :page_title do %>
  <%= Spree.t(:feature_products) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t(:new_featured_product), new_object_url, :icon => 'plus', :id => 'admin_new_latest_product_link' %>
  </li>
<% end %>

<% if @latest_products.any? %>
  <table class="index">
    <colgroup>
      <col style="width: 30%">
      <col style="width: 40%">
      <col style="width: 15%">
      <col style="width: 15%">
    </colgroup>
    <thead>
      <tr data-hook="admin_latest_products_index_headers">
        <th><%= Spree.t(:product) %></th>
        <th><%= Spree.t(:store) %></th>
        <th class="actions"></th>
      </tr>
    </thead>
    <tbody>
      <% @latest_products.each do |latest|%>
        <tr id="<%= spree_dom_id latest %>" data-hook="admin_latest_products_index_rows" class="<%= cycle('odd', 'even')%>">
          <td class="align-center"><%= latest.product.name if latest.product %></td>
          <td class="align-center"><%= latest.store.name if latest.store %></td>
          <td class="actions">
            <%= link_to_edit latest, :no_text => true %>
            <%= link_to_delete latest, :no_text => true %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="no-objects-found">
    <%= Spree.t(:no_resource_found, resource: 'feature product') %>,
    <%= link_to Spree.t(:add_one), new_object_url %>!
  </div>
<% end %>

<div class="tug_wrap">
  <% paginate @latest_products %>
</div>